        console.log(data);
        //getData()
        
        Chart.defaults.plugins.title.text = 'Graphique';
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Devis réalisés',
                    data: data,
                    borderColor: 'rgb(75, 192, 192)',
                    // tension: 0.1,
                    // borderWidth: 2
                }]
            },
            options: {
